<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tajos.graedeviewer.SplashActivity">

    <TextView
        android:id="@+id/welcomLbl2"
        android:layout_width="161dp"
        android:layout_height="57dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="92dp"
        android:layout_weight="0"
        android:fontFamily="@font/montserrat_bold"
        android:text="graede"
        android:textColor="@color/darkblue"
        android:textSize="37dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/welcomLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/montserrat_bold"
            android:text="Welcome!"
            android:textColor="@color/darkblue"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="145dp"
        android:layout_height="132dp"
        android:layout_marginTop="48dp"
        android:rotation="10"
        android:scaleType="centerCrop"
        android:src="@drawable/grading_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        tools:srcCompat="@drawable/grading_logo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="275dp"
        android:layout_height="218dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/fira_sans"
        android:text="@string/about_app"
        android:textColor="@color/darkblue"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        tools:text="@string/about_app" />

    <LinearLayout
        android:id="@+id/okayBtn"
        android:layout_width="136dp"
        android:layout_height="42dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.516">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Okay"
            android:textColor="@color/darkblue" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="44dp"
            android:layout_height="28dp"
            android:src="@drawable/right_arrow" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="246dp"
        android:layout_height="224dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:rotation="30"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/okayBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/globe" />

</androidx.constraintlayout.widget.ConstraintLayout>